    return res.newlyCreated.blobObject.blobId;
  }
};

// sdk-tusky/src/index.ts
export const useStorage: StorageAdapter = {
  async upload(file) {
    return Tusky.file.upload(file);  // Tusky API
  }
};

// simple-upload/src/App.tsx
