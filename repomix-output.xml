// base/src/hooks/useStorage.ts
export interface StorageAdapter {
  upload(file: File): Promise<string>;  // blobId
  download(blobId: string): Promise<Blob>;
}

// sdk-mysten/src/index.ts
export const useStorage: StorageAdapter = {
  async upload(file) {
