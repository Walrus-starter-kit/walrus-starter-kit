/**
 * Get or create WalrusClient instance
 */
export function getWalrusClient(): WalrusClient {
  if (walrusClient) {
    return walrusClient;
  }

  const env = loadEnv();
  const network = env.walrusNetwork as WalrusNetwork;
  const config = getNetworkConfig(network);

  // Initialize Sui client
